---
import Layout from '../layouts/Layout.astro';

const contactMethods = [
  {
    label: 'Email',
    value: 'ben@ben-nelson.dev',
    href: 'mailto:ben@ben-nelson.dev',
    description: 'Best way to reach me for opportunities',
    icon: 'M1.5 8.67v8.58a3 3 0 003 3h15a3 3 0 003-3V8.67l-8.928 5.493a3 3 0 01-3.144 0L1.5 8.67zM22.5 6.908V6.75a3 3 0 00-3-3h-15a3 3 0 00-3 3v.158l9.714 5.978a1.5 1.5 0 001.572 0L22.5 6.908z',
  },
  {
    label: 'GitHub',
    value: 'benvolatic',
    href: 'https://github.com/benvolatic',
    description: 'Check out my code and contributions',
    icon: 'M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z',
  },
  {
    label: 'LinkedIn',
    value: 'bennelson',
    href: 'https://linkedin.com/in/bennelson',
    description: 'Connect with me professionally',
    icon: 'M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z',
  },
];
---

<Layout
  title="Contact"
  description="Get in touch with Ben Nelson for job opportunities, collaborations, or just to chat about tech."
>
  <section class="container-main py-16 sm:py-24">
    <div class="max-w-2xl">
      <h1 class="text-3xl font-bold tracking-tight text-white sm:text-4xl">Get in Touch</h1>
      <p class="mt-4 text-lg text-gray-400">
        I'm currently open to new opportunities — whether it's a full-time role, contract work, or
        an interesting collaboration. Feel free to reach out through any of these channels.
      </p>
    </div>

    <div class="mt-12 grid gap-6 sm:grid-cols-3">
      {contactMethods.map((method) => (
        <a
          href={method.href}
          target={method.href.startsWith('mailto') ? undefined : '_blank'}
          rel={method.href.startsWith('mailto') ? undefined : 'noopener noreferrer'}
          class="card group text-center"
        >
          <div class="mx-auto flex h-12 w-12 items-center justify-center rounded-full bg-dark-700 text-gray-400 transition-colors group-hover:bg-accent/10 group-hover:text-accent">
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d={method.icon} />
            </svg>
          </div>
          <h3 class="mt-4 font-semibold text-white">{method.label}</h3>
          <p class="mt-1 font-mono text-sm text-accent">{method.value}</p>
          <p class="mt-2 text-sm text-gray-500">{method.description}</p>
        </a>
      ))}
    </div>

    <!-- Additional Info -->
    <div class="mt-16 rounded-xl border border-gray-700/50 bg-dark-800/30 p-8">
      <h2 class="text-lg font-semibold text-white">What I'm looking for</h2>
      <div class="mt-4 grid gap-6 text-gray-300 sm:grid-cols-2">
        <div>
          <h3 class="font-mono text-sm font-medium text-accent">Ideal Role</h3>
          <ul class="mt-2 space-y-1 text-sm">
            <li>• Full-stack or frontend-focused position</li>
            <li>• Product-oriented team that ships regularly</li>
            <li>• Remote-friendly or hybrid arrangement</li>
            <li>• Opportunity to work with modern tech stack</li>
          </ul>
        </div>
        <div>
          <h3 class="font-mono text-sm font-medium text-accent">I Bring</h3>
          <ul class="mt-2 space-y-1 text-sm">
            <li>• Strong React/TypeScript frontend skills</li>
            <li>• Backend experience with Rails and PostgreSQL</li>
            <li>• Real infrastructure/DevOps knowledge</li>
            <li>• Self-starter mentality, quick learner</li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Response Time -->
    <p class="mt-8 text-center text-sm text-gray-500">
      I typically respond within 24-48 hours. Looking forward to hearing from you!
    </p>
  </section>
</Layout>
