---
import Layout from '../layouts/Layout.astro';
import TechChip from '../components/TechChip.astro';
import NodeAnimation from '../components/NodeAnimation.astro';
import PixelGlobe from '../components/PixelGlobe.astro';

const techStack = {
  frontend: ['React', 'TypeScript', 'React Native', 'Expo', 'Tailwind CSS', 'Astro'],
  backend: ['Ruby on Rails', 'PostgreSQL', 'Supabase', 'REST APIs'],
  infrastructure: ['Proxmox VE', 'pfSense', 'Cloudflare', 'Nextcloud', 'Docker'],
};
---

<Layout>
  <!-- Hero Section -->
  <section class="relative overflow-hidden">
    <div class="container-main py-16 sm:py-24 lg:py-32">
      <div class="grid items-center gap-12 lg:grid-cols-2 lg:gap-8">
        <!-- Left: Text Content -->
        <div>
          <p class="font-mono text-sm text-accent">Hi, I'm</p>
          <h1 class="mt-2 text-4xl font-bold tracking-tight text-white sm:text-5xl lg:text-6xl">
            Ben Nelson
          </h1>
          <p class="mt-4 text-xl text-gray-300 sm:text-2xl lg:text-3xl">
            Full-Stack Engineer<span class="text-gray-500"> / </span><span class="text-accent">Frontend-leaning</span>
          </p>

          <p class="mt-6 max-w-xl text-lg text-gray-400 leading-relaxed">
            Self-taught developer who builds performant web applications and manages real infrastructure.
            From React frontends to Rails APIs to homelab networking â€” I ship production-ready code
            and understand the systems it runs on.
          </p>

          <!-- CTAs -->
          <div class="mt-10 flex flex-wrap gap-4">
            <a href="/resume.pdf" class="btn-primary">
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              Resume PDF
            </a>
            <a href="https://github.com/benvolatic" target="_blank" rel="noopener noreferrer" class="btn-secondary">
              <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
              </svg>
              GitHub
            </a>
            <a href="https://linkedin.com/in/bennelson" target="_blank" rel="noopener noreferrer" class="btn-secondary">
              <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
              LinkedIn
            </a>
            <a href="mailto:ben@ben-nelson.dev" class="btn-secondary">
              <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M1.5 8.67v8.58a3 3 0 003 3h15a3 3 0 003-3V8.67l-8.928 5.493a3 3 0 01-3.144 0L1.5 8.67zM22.5 6.908V6.75a3 3 0 00-3-3h-15a3 3 0 00-3 3v.158l9.714 5.978a1.5 1.5 0 001.572 0L22.5 6.908z"/>
              </svg>
              Email
            </a>
          </div>
        </div>

        <!-- Right: 3D Globe -->
        <div class="hidden h-[400px] lg:block lg:h-[500px]">
          <PixelGlobe />
        </div>
      </div>
    </div>

    <!-- Background gradient -->
    <div class="absolute inset-0 -z-10 overflow-hidden">
      <div class="absolute -top-1/2 right-0 h-[800px] w-[800px] rounded-full bg-accent/5 blur-3xl"></div>
    </div>

    <!-- Node network animation -->
    <NodeAnimation />
  </section>

  <!-- Tech Stack Section -->
  <section class="border-t border-gray-800/50">
    <div class="container-main py-16 sm:py-24">
      <h2 class="text-sm font-semibold uppercase tracking-wider text-gray-500">Tech Stack</h2>

      <div class="mt-8 grid gap-8 sm:grid-cols-3">
        <div>
          <h3 class="font-mono text-sm font-medium text-accent">Frontend</h3>
          <div class="mt-4 flex flex-wrap gap-2">
            {techStack.frontend.map((tech) => <TechChip label={tech} />)}
          </div>
        </div>

        <div>
          <h3 class="font-mono text-sm font-medium text-accent">Backend</h3>
          <div class="mt-4 flex flex-wrap gap-2">
            {techStack.backend.map((tech) => <TechChip label={tech} />)}
          </div>
        </div>

        <div>
          <h3 class="font-mono text-sm font-medium text-accent">Infrastructure</h3>
          <div class="mt-4 flex flex-wrap gap-2">
            {techStack.infrastructure.map((tech) => <TechChip label={tech} />)}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Projects Preview -->
  <section class="border-t border-gray-800/50">
    <div class="container-main py-16 sm:py-24">
      <div class="flex items-center justify-between">
        <h2 class="text-sm font-semibold uppercase tracking-wider text-gray-500">Featured Work</h2>
        <a href="/projects" class="link-hover font-mono text-sm">
          View all &rarr;
        </a>
      </div>

      <div class="mt-8 grid gap-6 sm:grid-cols-2">
        <a href="/projects#webrtc-demo" class="card group">
          <div class="flex items-start justify-between">
            <div>
              <h3 class="font-semibold text-white group-hover:text-accent transition-colors">WebRTC Video Demo</h3>
              <p class="mt-2 text-sm text-gray-400">Peer-to-peer video calling with signaling server</p>
            </div>
            <span class="text-gray-600 group-hover:text-accent transition-colors">&rarr;</span>
          </div>
          <div class="mt-4 flex flex-wrap gap-2">
            <TechChip label="WebRTC" variant="accent" />
            <TechChip label="TypeScript" />
            <TechChip label="React" />
          </div>
        </a>

        <a href="/projects#homelab" class="card group">
          <div class="flex items-start justify-between">
            <div>
              <h3 class="font-semibold text-white group-hover:text-accent transition-colors">Homelab Infrastructure</h3>
              <p class="mt-2 text-sm text-gray-400">Proxmox, pfSense, Cloudflare Tunnels, Nextcloud</p>
            </div>
            <span class="text-gray-600 group-hover:text-accent transition-colors">&rarr;</span>
          </div>
          <div class="mt-4 flex flex-wrap gap-2">
            <TechChip label="Proxmox VE" variant="accent" />
            <TechChip label="pfSense" />
            <TechChip label="Cloudflare" />
          </div>
        </a>
      </div>
    </div>
  </section>
</Layout>
