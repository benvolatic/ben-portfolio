---
import type { Project } from '../content/projects';
import TechChip from './TechChip.astro';

interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<article id={project.id} class="card scroll-mt-24">
  <div class="flex flex-wrap items-start justify-between gap-4">
    <div>
      <h3 class="text-xl font-semibold text-white">{project.title}</h3>
      <p class="mt-1 text-sm text-accent">{project.tagline}</p>
    </div>

    {project.links && (
      <div class="flex gap-2">
        {project.links.github && (
          <a
            href={project.links.github}
            target="_blank"
            rel="noopener noreferrer"
            class="flex h-9 w-9 items-center justify-center rounded-lg text-gray-400 transition-colors hover:bg-dark-600 hover:text-white"
            aria-label="View on GitHub"
          >
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
            </svg>
          </a>
        )}
        {project.links.demo && (
          <a
            href={project.links.demo}
            target="_blank"
            rel="noopener noreferrer"
            class="flex h-9 w-9 items-center justify-center rounded-lg text-gray-400 transition-colors hover:bg-dark-600 hover:text-white"
            aria-label="View demo"
          >
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
          </a>
        )}
      </div>
    )}
  </div>

  <p class="mt-4 text-gray-400 leading-relaxed">{project.description}</p>

  <ul class="mt-4 space-y-2">
    {project.highlights.map((highlight) => (
      <li class="flex items-start gap-2 text-sm text-gray-300">
        <svg class="mt-1 h-4 w-4 flex-shrink-0 text-accent" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
        </svg>
        {highlight}
      </li>
    ))}
  </ul>

  <div class="mt-6 flex flex-wrap gap-2">
    <TechChip label={project.primaryTag} variant="accent" />
    {project.tags.filter(tag => tag !== project.primaryTag).map((tag) => (
      <TechChip label={tag} />
    ))}
  </div>
</article>
